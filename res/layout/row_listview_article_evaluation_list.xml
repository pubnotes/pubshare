<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_evaluations_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_row_evaluation_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="evaluation Date"
		style="@style/FontLarge.Bold.Gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_row_evaluation_notes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="evaluation notes summary"
        style="@style/FontSmall.Gray"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating_row_evaluation_overall"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:rating="2.5" />

</LinearLayout>